<% provide(:title, 'タスク作成') %>
<h1>タスク作成</h1>

<dii class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
      
      <%= f.submit "タスク作成", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</dii>